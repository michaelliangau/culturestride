<!-- This is the form that a society director uses to create his/her society login credentials -->
<%- contentFor('body') %>

<body>
    <div class="row">

        <div class="col s12" style="max-width:1000px;padding: 2%;text-align:center">
            <form name="/sohoapprovetransaction" method="post" id="">

                <span>
                    <h3>Approve Payments</h3>
                </span>
                <br>
                <label for="transaction">Unapproved transactions</label>
                <br>
                <select id="transaction" name="transaction" required>
                    <option value="">Please select...</option>
                    <% for (var i = 0 ; i < transaction.length ; i ++) { %>
                    <option value="<%- transaction[i].sohoTID %>"><%- transaction[i].bankDescription + ' - ' + transaction[i].paymentMethod + ' - ' + transaction[i].paymentAmount + 'USD = ' + transaction[i].convertedPaymentAmount + ' - ' + transaction[i].firstName + ' ' + transaction[i].lastName  %></option>
                    <% } %>
                </select>
                <br>
                <label for="class">Class Name</label>
                <br>
                <select id="class" name="class" required>
                    <option value="">Please select...</option>
                    <% for (var i = 0 ; i < classList.length ; i ++) { %>
                    <option value="<%- classList[i].sohoCID %>"><%- classList[i].className %></option>
                    <% } %>
                </select>
                <br>
                <div class="input-field col s12 marksocformnomarginbottom">
                        <label for="hoursToAdd">Number of hours to add</label>
                        <br>
                    <input name="hoursToAdd" id="hoursToAdd" type="number" step="0.5" value="10" class="validate"
                        min="0" required>
                </div>
                <button class="button button-primary button-block button-shadow" type="submit">Submit</button>
            <br>
            </form>
            <a  href="/sohostudents" style="max-width:300px" class="button button-primary button-block button-shadow" type="submit"
               >Back</a>

            <br>
        </div>
    </div>

</body>