<!-- This is the form that a society director uses to create his/her society login credentials -->
<%- contentFor('body') %>

<body>
    <div class="row">

        <div class="col s12" style="max-width:1000px;padding: 2%;text-align:center">
            <form name="/sohoAddStudent" method="post" id="">

                <span>
                    <h3>Culturestride Add Purchased Hours</h3>
                </span>
                <br>
                <label for="class">Class Name</label>
                <br>
                <select id="class" name="class" required>
                    <option value="">Please select...</option>
                    <% for (var i = 0 ; i < classList.length ; i ++) { %>
                    <option value="<%- classList[i].sohoCID %>"><%- classList[i].className %></option>
                    <% } %>
                </select>
                <br>
                <div class="input-field col s12 marksocformnomarginbottom">
                        <label for="hoursToAdd">Number of hours to add</label>
                        <br>
                    <input name="hoursToAdd" id="hoursToAdd" type="number" step="0.5" value="10" class="validate"
                        min="0" required>
                </div>
                <button class="button button-primary button-block button-shadow" type="submit">Submit</button>

            </form>
            <button class="button button-primary button-block button-shadow" type="submit"
                onclick="back()">Back</button>

            <br>
        </div>
    </div>

    <script>
        function back() {
            window.history.back();
        }
    </script>
</body>