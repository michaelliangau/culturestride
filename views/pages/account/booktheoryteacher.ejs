<!-- FULL CALENDAR -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.css">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.js"></script>
<!-- MOMENT  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js"></script>

<script>
  // build timezone
  var region = Intl.DateTimeFormat().resolvedOptions().timeZone;
  var hrOffset = -(new Date().getTimezoneOffset() / 60);
  if (hrOffset > 0) {
    var offset = 'UTC +' + hrOffset + ':00';
  } else {
    var offset = 'UTC ' + hrOffset + ':00';
  }
  document.getElementById('timezone').innerHTML = offset + ' ' + region;

  var teacher = document.getElementById('teacher').textContent;


  window.mobilecheck = function () {
    var check = false;
    (function (a) {
      if (
        /(android|bb\d+|meego).+mobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge |maemo|midp|mmp|mobile.+firefox|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows ce|xda|xiino/i
        .test(a) ||
        /1207|6310|6590|3gso|4thp|50[1-6]i|770s|802s|a wa|abac|ac(er|oo|s\-)|ai(ko|rn)|al(av|ca|co)|amoi|an(ex|ny|yw)|aptu|ar(ch|go)|as(te|us)|attw|au(di|\-m|r |s )|avan|be(ck|ll|nq)|bi(lb|rd)|bl(ac|az)|br(e|v)w|bumb|bw\-(n|u)|c55\/|capi|ccwa|cdm\-|cell|chtm|cldc|cmd\-|co(mp|nd)|craw|da(it|ll|ng)|dbte|dc\-s|devi|dica|dmob|do(c|p)o|ds(12|\-d)|el(49|ai)|em(l2|ul)|er(ic|k0)|esl8|ez([4-7]0|os|wa|ze)|fetc|fly(\-|_)|g1 u|g560|gene|gf\-5|g\-mo|go(\.w|od)|gr(ad|un)|haie|hcit|hd\-(m|p|t)|hei\-|hi(pt|ta)|hp( i|ip)|hs\-c|ht(c(\-| |_|a|g|p|s|t)|tp)|hu(aw|tc)|i\-(20|go|ma)|i230|iac( |\-|\/)|ibro|idea|ig01|ikom|im1k|inno|ipaq|iris|ja(t|v)a|jbro|jemu|jigs|kddi|keji|kgt( |\/)|klon|kpt |kwc\-|kyo(c|k)|le(no|xi)|lg( g|\/(k|l|u)|50|54|\-[a-w])|libw|lynx|m1\-w|m3ga|m50\/|ma(te|ui|xo)|mc(01|21|ca)|m\-cr|me(rc|ri)|mi(o8|oa|ts)|mmef|mo(01|02|bi|de|do|t(\-| |o|v)|zz)|mt(50|p1|v )|mwbp|mywa|n10[0-2]|n20[2-3]|n30(0|2)|n50(0|2|5)|n7(0(0|1)|10)|ne((c|m)\-|on|tf|wf|wg|wt)|nok(6|i)|nzph|o2im|op(ti|wv)|oran|owg1|p800|pan(a|d|t)|pdxg|pg(13|\-([1-8]|c))|phil|pire|pl(ay|uc)|pn\-2|po(ck|rt|se)|prox|psio|pt\-g|qa\-a|qc(07|12|21|32|60|\-[2-7]|i\-)|qtek|r380|r600|raks|rim9|ro(ve|zo)|s55\/|sa(ge|ma|mm|ms|ny|va)|sc(01|h\-|oo|p\-)|sdk\/|se(c(\-|0|1)|47|mc|nd|ri)|sgh\-|shar|sie(\-|m)|sk\-0|sl(45|id)|sm(al|ar|b3|it|t5)|so(ft|ny)|sp(01|h\-|v\-|v )|sy(01|mb)|t2(18|50)|t6(00|10|18)|ta(gt|lk)|tcl\-|tdg\-|tel(i|m)|tim\-|t\-mo|to(pl|sh)|ts(70|m\-|m3|m5)|tx\-9|up(\.b|g1|si)|utst|v400|v750|veri|vi(rg|te)|vk(40|5[0-3]|\-v)|vm40|voda|vulc|vx(52|53|60|61|70|80|81|83|85|98)|w3c(\-| )|webc|whit|wi(g |nc|nw)|wmlb|wonu|x700|yas\-|your|zeto|zte\-/i
        .test(a.substr(0, 4))) check = true;
    })(navigator.userAgent || navigator.vendor || window.opera);
    return check;
  };


  // FULL CALENDAR INITIATLISATION
  var calendarEl = document.getElementById('calendar');
  var calendar = new FullCalendar.Calendar(calendarEl, {
    initialView: window.mobilecheck() ? "timeGridDay" : "timeGridWeek",
    headerToolbar: {
      left: '',
      right: 'prev,next'
    },
    allDaySlot: false,
    firstDay: 1, // set first day to monday
    editable: false,
    height: "auto",
    selectable: false,
    slotEventOverlap: false,
    slotDuration: "00:30:00",
    events: '/getCalendarEventsV2?teacher=' + teacher,

    eventClick: function (info) {
      var newTime = moment(info.event.start);
      document.getElementById("newClassTime").value = newTime.clone().utc().format();
      document.getElementById('newClassTimeInput').value = newTime.clone().local().format('LLL');

      updateRepeatClass();
      // scroll to the updated value
      location.href = "#timeSlot";
    }

  });
  calendar.render();

  // read only
  $(".readonly").on('keydown paste focus mousedown', function (e) {
    if (e.keyCode != 9) // ignore tab
      e.preventDefault();
  });
  $(function () {
    $('[data-toggle="tooltip"]').tooltip({
      boundary: 'window',
    });
  });

  var repeatClassCheck = 0; // to determine whether or not to enable the book button

  function updateRepeatClass() {
    repeatClassCheck = 0;
    var repeatNo = document.getElementById('repeatNo').value;
    var lessonLength = document.getElementById('lessonLength').value;
    var newClassTime = document.getElementById('newClassTime').value;
    var mom = moment(newClassTime);

    if (repeatNo > 1 && newClassTime != '') {
      var content = `<div class="highlightBox" id="repeatClassHighlightBox" style="margin-top:10px;">
    <span class="subtext">Bookings are stored in UTC time and may deviate from the printed times with timezone adjustments like daylight savings</span>
    <br><br>
    Selected weekly times:<br>
    `;
      for (let i = 0; i < repeatNo; i++) {
        var momToPrint = mom.clone().add(i, 'weeks');
        checkCalendarEventFree(momToPrint.clone().utc().format(), lessonLength, teacher, i, repeatNo);
        var contentTemp = momToPrint.clone().format('LLL') + `<span id="repeatClasses${i}"></span><br>`;
        content += contentTemp;
      }
      content += `</div>`;
      document.getElementById('repeatClass').innerHTML = content;
          // fade book button
    document.getElementById('bookBtn').classList.add("disableFade");
    document.getElementById('bookBtn').setAttribute("data-toggle", "tooltip");
    document.getElementById('bookBtn').setAttribute("title", "Some of your selected class times are invalid, please adjust your booking");
    document.getElementById('bookBtn').setAttribute("data-original-title", "Some of your selected class times are invalid, please adjust your booking");
    $(function () {
          $('[data-toggle="tooltip"]').tooltip({
            boundary: 'window',
          });
        });
    } else if (repeatNo == 1) { // no repeat
      document.getElementById('repeatClass').innerHTML = ``;
      // reset book button
      document.getElementById('bookBtn').classList.remove("disableFade");
          document.getElementById('bookBtn').removeAttribute("data-toggle");
          document.getElementById('bookBtn').removeAttribute("title");
          document.getElementById('bookBtn').removeAttribute("data-original-title");
    }

  }

  function checkCalendarEventFree(start, lessonLength, teacher, i, repeatNo) {
    $.ajax({
      type: "POST",
      url: "/checkCalendarEventFree",
      timeout: 30000,
      data: {
        start: start,
        lessonLength: lessonLength,
        teacher: teacher,
      },
      success: function (data) {
        //show content
        console.log('successful post');
        if (data == 0) { // no overlap
          var content = `<svg xmlns="http://www.w3.org/2000/svg" data-toggle="tooltip" title="Available" style="color: green;display: inline-flex;margin-left: 5px;" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
</svg>`;
repeatClassCheck ++;

        } else if (data == 1) { // overlap
          var content = `<svg xmlns="http://www.w3.org/2000/svg" data-toggle="tooltip" title="Busy" style="color: red;display: inline-flex;margin-left: 5px;" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
</svg>`;
}
        document.getElementById('repeatClasses' + i).innerHTML = content;

        if (repeatClassCheck == repeatNo) {
          document.getElementById('bookBtn').classList.remove("disableFade");
          document.getElementById('bookBtn').removeAttribute("data-toggle");
          document.getElementById('bookBtn').removeAttribute("title");
          document.getElementById('bookBtn').removeAttribute("data-original-title");
        }
        // tooltip
        $(function () {
          $('[data-toggle="tooltip"]').tooltip({
            boundary: 'window',
          });
        });

      },
      error: function (jqXHR, textStatus, err) {
        //show error message
        console.log('unsuccessful post');
      }
    });
  }

  var region = Intl.DateTimeFormat().resolvedOptions().timeZone;
	if (region.indexOf("Australia") < 0) {
		// convert to USD
		document.getElementById('currencyCode').textContent = 'USD';
    document.getElementById('pracPrice').textContent = '7';
		document.getElementById('theoryPracPrice').textContent = '29';
		document.getElementById('theoryPrice').textContent = '29';
	}
</script>